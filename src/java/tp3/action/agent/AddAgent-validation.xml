<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="agent.login">
        <field-validator type="requiredstring">
            <message>The login is required</message>
        </field-validator>
    </field>

    <field name="agent.password">
        <field-validator type="requiredstring">
            <message>The password is required</message>
        </field-validator>
    </field>

    <field name="agent.firstName">
        <field-validator type="requiredstring">
            <message>The first name is required</message>
        </field-validator>
    </field>

    <field name="agent.lastName">
        <field-validator type="requiredstring">
            <message>The last name is required</message>
        </field-validator>
    </field>
</validators>